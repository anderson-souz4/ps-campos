@page
@model ps.Pages_Produtos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<p>
    <button type="button" onclick="window.location.href = '@Url.Page("Create")'" class="btn btn-primary">Cadastrar</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].DscProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto[0].VlrUnitario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Produto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DscProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlrUnitario)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
