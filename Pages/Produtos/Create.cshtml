@page
@model ps.Pages_Produtos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Produtos:</h1>

<h4>Cadastro de produtos: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto.DscProduto" class="control-label"></label>
                <input asp-for="Produto.DscProduto" class="form-control" />
                <span asp-validation-for="Produto.DscProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.VlrUnitario" class="control-label"></label>
                <input asp-for="Produto.VlrUnitario" class="form-control" />
                <span asp-validation-for="Produto.VlrUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" onclick="window.location.href = '@Url.Page("Index")'" class="btn btn-warning mt-3">Retornar</button>
</div>

